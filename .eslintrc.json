{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": "true"
    }]
  },
  "env": {
    "jest/globals": true
  },
  "globals": {
    "fetch": false
  }
}
